{
  "compilerOptions": {
    "target": "ES2022", // ES2020
    "module": "NodeNext", // esnext
    "moduleResolution": "nodenext", //"nodenext"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}